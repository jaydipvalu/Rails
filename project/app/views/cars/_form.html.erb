<%= form_with(model: car, local: true) do |form| %>
  <% if car.errors.any? %>
    <div id="error_explanation">
,    <h2><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
        <% car.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-6">
    <%= form.label :name %>
    <%= form.text_field :name, class:'form-control', placeholder:'Enter name'%>
  </div>

  <div class="col-sm-6">
    <%= form.label :brand_id %>
    <%= form.text_field :brand_id, class:'form-control',placeholder:'Enter brand_id' %>
  </div>

  <div class="col-sm-6">
    <%= form.label :model_id %>
    <%= form.select(:model_id,options_for_select(Model.pluck(:name, :id)),{prompt:"Select"}, class:'form-control')%>
  </div>

  <div class="col-sm-6">
    <%= form.label :version_id %>
    <%= form.select(:version_id,options_for_select(Version.pluck(:name, :id)),{prompt:"Select"}, class:'form-control')%>
  </div>

  <div class="col-sm-6">
    <%= form.label :car_type_id %>
    <%= form.text_field :car_type_id, class:'form-control',placeholder:'Enter car_type_id' %>
  </div>

  <div class="col-sm-6">
    <%= form.label :rto_price %>
    <%= form.text_field :rto_price, class:'form-control',placeholder:'Enter rto_price' %>
  </div>

  <div class="col-sm-6">
    <%= form.label :on_road_price %>
    <%= form.text_field :on_road_price, class:'form-control',placeholder:'Enter on_road_price' %>
  </div>

  <div class="col-sm-6">
    <%= form.label :total_price %>
    <%= form.text_field :total_price, class:'form-control',placeholder:'Enter total_price' %>
  </div>

  <div class="col-sm-6">
    <%= form.label :active %>
    <%= form.text_field :active , class:'form-control',placeholder:'Enter Yes or NO' %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class: 'btn btn-primary ml-3' %>
  </div>
<% end %>
