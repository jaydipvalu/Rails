<p id="notice"><%= notice %></p>

<h1>Car Types</h1>

<table class="table table-bordered" >
  <thead>
    <tr>
    <td colspan="15">
      <div class="row">
        <div class="col-md-12">
          <%= form_tag(car_types_path, method: :get) do %>
            <div class="row justify-content-center">
              <div class="col-sm-9">
                <%= text_field_tag(:name, params[:name],class: "form-control", placeholder: "Search") %>
              </div>
              <div clase="col-sm-5">
                <%= submit_tag "Search", class:"btn btn-outline-primary btn-block" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </td>
  </tr>
    <tr>
      <th>Name</th>
      <th colspan="3"><%= link_to 'New Car Type', new_car_type_path, class:'btn btn-primary btn-block' %></th>
    </tr>
  </thead>
  <tbody>
    <% @car_types.each do |car_type| %>
      <tr>
        <td><%= car_type.name %></td>
        <td><%= link_to 'Show', car_type, class:'btn btn-dark' %></td>
        <td><%= link_to 'Edit', edit_car_type_path(car_type), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', car_type, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
