<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<table class="table table-bordered">
  <thead>
    <tr>
    <td colspan="12">
      <div class="row">
        <div class="col-md-11">
          <%= form_tag(brands_path, method: :get) do %>
            <div class="row justify-content-center">
              <div class="col-sm-9">
                <%= text_field_tag(:Search, params[:Search],class: "form-control", placeholder: "Search") %>
              </div>
              <div clase="col-sm-3">
                <%= submit_tag "Search", class:"btn btn-primary btn-block" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </td>
  </tr>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Email</th>
      <th colspan="3"><%= link_to 'New Brand', new_brand_path, class:'btn btn-primary btn-block' %></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= link_to brand.website, "https://www.google.com/search?q=#{brand.website}" %></td>
        <td><%= brand.email %></td>
          <td><%= link_to 'Show', brand, class: 'btn btn-dark' %></td>
          <td><%= link_to 'Edit', edit_brand_path(brand), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @brands %>
<br>
