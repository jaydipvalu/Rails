<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-bordered">
  <thead>
    <tr>
    <td colspan="15">
      <div class="row">
        <div class="col-md-12">
          <%= form_tag(cars_path, method: :get) do %>
            <div class="row justify-content-center">
              <div class="col-sm-9">
                <%= text_field_tag(:name, params[:name],class: "form-control", placeholder: "Search") %>
              </div>
              <div clase="col-sm-5">
                <%= submit_tag "Search", class:"btn btn-outline-primary btn-block" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </td>
  </tr>
    <tr>
      <th>Name</th>
      <th>Brith date</th>
      <th>Email</th>
      <th>Pincode</th>
      <th>Gender</th>
      <th>Phone</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Adress</th>
      <th colspan="3"><%= link_to 'New User', new_user_path, class:'btn btn-primary btn-block' %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.brith_date %></td>
        <td><%= user.email %></td>
        <td><%= user.pincode %></td>
        <td><%= user.gender %></td>
        <td><%= user.phone %></td>
        <td><%= user.city %></td>
        <td><%= user.state %></td>
        <td><%= user.country %></td>
        <td><%= user.adress %></td>
        <td><%= link_to 'Show', user, class:'btn btn-dark' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?', }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
