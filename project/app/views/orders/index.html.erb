<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table  class="table table-bordered">
  <thead>
    <tr>
    <td colspan="15">
      <div class="row">
        <div class="col-md-12">
          <%= form_tag(cars_path, method: :get) do %>
            <div class="row justify-content-center">
              <div class="col-sm-9">
                <%= text_field_tag(:name, params[:name],class: "form-control", placeholder: "Search") %>
              </div>
              <div clase="col-sm-5">
                <%= submit_tag "Search", class:"btn btn-outline-primary btn-block" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </td>
  </tr>
    <tr>
      <th>User</th>
      <th>On road price</th>
      <th>Rto price</th>
      <th>Total price</th>
      <th>Payment methods</th>
      <th>Payment</th>
      <th>Status</th>
      <th colspan="3"><%= link_to 'New Order', new_order_path,class:'btn btn-primary btn-block' %></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.on_road_price %></td>
        <td><%= order.rto_price %></td>
        <td><%= order.total_price %></td>
        <td><%= order.payment_methods %></td>
        <td><%= order.payment_id %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order, class: 'btn btn-dark' %></td>
        <td><%= link_to 'Edit', edit_order_path(order), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
